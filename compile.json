{
  "targets": [
    {
      "type": "build",
      "outputPath": "compiled/build",
      "minify": "off",
      "babelOptions": {
        "targets": "node >= 10"
      },
      "deployPath": "lib",
      "writeCompileInfo": true
    }
  ],
  "defaultTarget": "build",
  "locales": [
    "en"
  ],
  "libraries": [
    "."
  ],
  "applications": [
    {
      "class": "qx.application.Native",
      "name": "qx_server",
      "type": "node",
      "environment": {
        "qx.debug": false
      },
      "include": [
        "qx.core.*",
        "qx.data.*",
        "qx.io.*",
        "qx.lang.*",
        "qx.locale.*",
        "qx.log.*",
        "qx.type.*",
        "qx.util.*",
        "qx.dev.unit.TestLoaderBasic",
        "qx.dev.unit.Sinon"
      ],
      "exclude": [
        "q",
        "qx.test.*",
        "qxWeb",
        "qx.module.*",
        "qx.dev.unit.TestLoader",
        "qx.dev.unit.TestLoaderInline",
        "qx.dev.unit.TestLoaderMobile",
        "qx.dev.unit.TestLoaderNative",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Flash",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    }
  ],
  "eslintConfig": {
    "extends": [
       "@qooxdoo/qx/browser",
       "@qooxdoo/qx",
       "@qooxdoo/jsdoc-disable"
    ],
    "rules": {
      "no-new": "off",
      "no-unused-vars": "off",
      "no-eval": "off",
      "new-cap": "off",

      "brace-style": "allman",
      "no-warning-comments": "off",
      "no-lonely-if": "off",
      "guard-for-in": "off",
      "max-params": "off",
      "no-nested-ternary": "off",
      "no-multi-spaces": "off",
      "quotes": "off",
      "no-redeclare": "off",
      "operator-linebreak": "off",
      "no-eq-null": "off",
      "no-useless-call": "off",
      "consistent-return": "off",
      "max-statements-per-line": "off",
      "no-prototype-builtins": "off",
      "array-callback-return": "off",
      "no-constant-condition": "off",
      "no-empty": "off",
      "no-fallthrough": "off",
      "valid-typeof": "off",
      "no-cond-assign": "off",
      "no-else-return": "off",
      "no-unneeded-ternary": "off",
      "one-var": "off",
      "no-useless-concat": "off",
      "no-unmodified-loop-condition": "off",
      "func-call-spacing": "off",
      "no-unexpected-multiline": "off",
      "no-labels": "off",
      "no-inner-declarations": "off"
    }
  },
  "$schema": "https://qooxdoo.org/schema/compile-1-0-0.json"
}
