{
  "$schema": "https://qooxdoo.org/schema/compile-1-0-0.json",
  "targets": [
    {
      "type": "source",
      "application-types": [
        "browser"
      ],
      "outputPath": "compiled/browser/source",
      "babelOptions": {
        "targets": {
          "edge": "18",
          "chrome": "79",
          "firefox": "72"
        }
      }
    },
    {
      "type": "build",
      "application-types": [
        "browser"
      ],
      "outputPath": "compiled/browser/build",
      "deployPath": "html"
    },
    {
      "type": "source",
      "application-types": [
        "node"
      ],
      "outputPath": "compiled/node/source",
      "babelOptions": {
        "targets": "node >= 11"
      }
    },
    {
      "type": "build",
      "application-types": [
        "node"
      ],
      "outputPath": "compiled/node/build",
      "deployPath": "lib",
      "writeCompileInfo": true,
      "minify": "off",
      "babelOptions": {
        "targets": "node >= 11"
      }
    }
  ],
  "defaultTarget": "source",
  "locales": [
    "en"
  ],
  "ignores": [
    "manifest_path",
    "setImmediate",
    "__dirname",
    "module.*",
    "process.*",
    "Promise.*",
    "require.*",
    "path.*",
    "args.*",
    "loadSass"
  ],
  "libraries": [
    "."
  ],
  "applications": [
    {
      "class": "qx.tool.cli.Application",
      "name": "compiler",
      "title": "Qooxdoo Compiler",
      "type": "node",
      "deploy": true,
      "include": [
        "qx.core.BaseInit",
        "qx.tool.*"
      ],
      "exclude": [
        "q",
        "qxWeb",
        "qx.module.*",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    },
    {
      "class": "qx.tool.cli.LibraryApplication",
      "name": "compilerLibrary",
      "title": "Qooxdoo Compiler as Library",
      "type": "node",
      "deploy": true,
      "include": [
        "qx.core.BaseInit",
        "qx.tool.*"
      ],
      "exclude": [
        "q",
        "qxWeb",
        "qx.module.*",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    },
    {
      "class": "qx.application.Native",
      "name": "qx_server",
      "type": "node",
      "deploy": true,
      "environment": {
        "qx.debug": false
      },
      "include": [
        "qx.core.*",
        "qx.data.*",
        "qx.io.*",
        "qx.lang.*",
        "qx.locale.*",
        "qx.log.*",
        "qx.type.*",
        "qx.util.*",
        "qx.dev.unit.TestLoaderBasic",
        "qx.dev.unit.Sinon"
      ],
      "exclude": [
        "q",
        "qx.test.*",
        "qxWeb",
        "qx.module.*",
        "qx.dev.unit.TestLoader",
        "qx.dev.unit.TestLoaderInline",
        "qx.dev.unit.TestLoaderMobile",
        "qx.dev.unit.TestLoaderNative",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    },
    {
      "class":  "qxWeb",
      "name":   "qxWeb",
      "title": "qxWeb Demo Application",
      "type" :  "browser",
      "deploy": true,
      "bootPath": "source/boot",
      "include": [
        "qx.ui.website.*",
        "qx.module.*",
        "qxWeb",
        "q"
      ],
      "exclude" : [
      ]
    }
  ],
  "sass": {
    "compiler": "legacy"
  },
  "eslintConfig": {
    "extends": [
       "@qooxdoo/qx/browser",
       "@qooxdoo/qx",
       "@qooxdoo/jsdoc-disable"
    ],
    "parserOptions": {
      "ecmaVersion": "2020"
    },
    "globals": {
      "loadSass": "readonly"
  },
  "rules": {
      "@qooxdoo/qx/no-illegal-private-usage": "off",
      "@qooxdoo/qx/no-refs-in-members": "off",
      "no-undef": "off",
      "no-duplicate-case": "off",
      "handle-callback-err": "off",
      "no-undef-init": "off",
      "comma-dangle": "off",
      "no-array-constructor": "off",
      "no-regex-spaces": "off",
      "no-new-object": "off",
      "no-global-assign": "off",

      "no-extra-boolean-cast": "off",
      "no-new": "off",
      "no-unused-vars": "off",
      "no-eval": "off",
      "new-cap": "off",
      "no-proto": "off",
      "no-extend-native": "off",
      "no-self-compare": "off",
      "no-new-wrappers": "off",
      "wrap-iife": "off",
      "brace-style": "off",
      "dot-location": "off",
       "keyword-spacing": "off",
       "space-in-parens": "off",
       "comma-spacing": "off",
       "padded-blocks": "off",
       "space-before-blocks": "off",
       "one-var-declaration-per-line": "off",
       "semi-spacing": "off",
       "block-spacing": "off",
       "no-floating-decimal": "off",
       "computed-property-spacing": "off",
       "switch-colon-spacing": "off",
       "yoda": "off",
       "no-whitespace-before-property": "off",
       "no-extra-bind": "off",
       "space-unary-ops": "off",
       "operator-assignment": "off",
       "eol-last": "off",
       "linebreak-style": "off",
       "no-unsafe-negation": "off",
       "new-parens": "off",
       "semi": "off",
       "curly": "error",
       "no-mixed-spaces-and-tabs": "off",
       "no-extra-semi": "off",
      "indent": "off",
      "no-warning-comments": "off",
      "no-lonely-if": "off",
      "guard-for-in": "off",
      "max-params": "off",
      "no-nested-ternary": "off",
      "no-multi-spaces": "off",
      "quotes": "off",
      "no-redeclare": "off",
      "operator-linebreak": "off",
      "no-eq-null": "off",
      "no-useless-call": "off",
      "consistent-return": "off",
      "max-statements-per-line": "off",
      "no-prototype-builtins": "off",
      "array-callback-return": "off",
      "no-constant-condition": "off",
      "no-empty": "off",
      "no-fallthrough": "off",
      "valid-typeof": "off",
      "no-cond-assign": "off",
      "no-else-return": "off",
      "no-unneeded-ternary": "off",
      "one-var": "off",
      "no-useless-concat": "off",
      "no-unmodified-loop-condition": "off",
      "func-call-spacing": "off",
      "no-unexpected-multiline": "off",
      "no-labels": "off",
      "no-inner-declarations": "off"
    }
  }
}
