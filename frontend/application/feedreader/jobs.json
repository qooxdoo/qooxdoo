{
  "common" :
  {
    "let" :
    [
      ["APPLICATION_NAMESPACE", "feedreader"],
      ["QOOXDOO_PATH", "../.."],
      ["QOOXDOO_URI", "../${QOOXDOO_PATH}"]
    ],

    "library" :
    [
      {
        "namespace": "qx",
        "encoding" : "utf-8",
        "path"     : "${QOOXDOO_PATH}/framework/source",
        "uri"      : "${QOOXDOO_URI}/framework/source"
      },

      {
        "namespace": "${APPLICATION_NAMESPACE}",
        "encoding" : "utf-8",
        "path"     : "./source",
        "uri"      : "../source"
      }
    ],


    "include" : ["feedreader.*", "qx.legacy.theme.Ext"],

    "require" :
    {
      "qx.log.Logger" : ["qx.log.appender.Native"]
    },

    "settings" :
    {
      "qx.application" : "feedreader.Application",
      "qx.resourceUri" : "${QOOXDOO_URI}/framework/source/resource",
      "qx.legacy.theme"       : "qx.legacy.theme.Ext",
      "${APPLICATION_NAMESPACE}.resourceUri" : "./resource/${APPLICATION_NAMESPACE}"
    },

    "localize" :
    {
      "locales" : ["en", "de", "es", "it"]
    },

    "cache" :
    {
      "path" : "../../cache2"
    }
  },


  "source" :
  {
    "extend" : ["common"],

    "source" :
    {
      "file" : "./source/script/feedreader.js"
    }
  },


  "build" :
  {
    "extend" : ["common"],

    "compile" :
    {
      "file" : "./build/script/${APPLICATION_NAMESPACE}.js",
      "uri"  : "script/${APPLICATION_NAMESPACE}.js"
    }
  },


  "api-data" :
  {
    "extend" : ["common"],

    "api" :
    {
      "path" : "./api/script"
    }

  },


  "api-build" :
  {
    "extend" : ["common"],

    "library" :
    [
      {
        "encoding" : "utf-8",
        "path"     : "../../framework/source",
        "uri"      : "../../../framework/source"
      },

      {
        "encoding" : "utf-8",
        "path"     : "${QOOXDOO_PATH}/application/apiviewer/source",
        "uri"      : "../${QOOXDOO_PATH}/application/apiviewer/source"
      }
    ],

    "include" : ["apiviewer.Application", "qx.legacy.theme.ClassicRoyale"],

    "settings" :
    {
      "qx.application" : "apiviewer.Application",
      "qx.resourceUri" : "${QOOXDOO_URI}/framework/source/resource",
      "qx.minLogLevel" : "700",
      "qx.legacy.theme"       : "qx.legacy.theme.ClassicRoyale",
      "apiviewer.resourceUri" : "./resource/apiviewer",
      "apiviewer.title": "Generator2 API Viewer"
     },

    "variants" :
    {
      "qx.debug" : ["off"]
    },

    "compile" :
    {
      "file" : "./api/script/apiviewer.js",
      "uri"  : "script/apiviewer.js"
    }
  }
}
