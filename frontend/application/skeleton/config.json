{
  "include" :
  {
    "appconf" : "../../tool/data/config/application.json"
  },


  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "APPLICATION" : "custom",
        "QOOXDOO_PATH": "../../framework"
      },

      "cache" :
      {
        // use qooxdoo wide cache folder
        "path" : "../../cache"
      }
    },


    // this is for source/build versions
    "common-builds" :
    {
      "extend"  : ["common"],

      "include" : ["custom.Application", "qx.theme.Modern"],

      "settings" :
      {
        "qx.theme" : "qx.theme.Modern"
      },

      "localize" :
      {
        "locales" : [ "en" ]
      }
    },


    "source" :
    {
      "extend" : ["common-builds", "appconf/source"]
    },


    "build" :
    {
      "extend" : ["common-builds", "appconf/build"]
    },


    "api" :
    {
      "extend": ["common", "appconf/api"],

      "let" :
      {
        "ROOT" : "${QOOXDOO_PATH}/../application/apiviewer"
      }
    }
  }
}
