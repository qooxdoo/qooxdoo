{
  "name"    : "featureconfigeditor",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "build-lowlevel",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",
    "source-lowlevel",
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "fce",
    "QOOXDOO_PATH" : "../..",
    "QXTHEME"      : "fce.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },
  
  "config-warnings" : 
  {
    "job-shadowing" : ["libraries", "build-script", "build-files", "common", "translation"],
    
    "environment" : [ "non-literal-keys" ]
  },

  "jobs" :
  {
    
    "libraries" :
    {
      "library" : [
        {
          "manifest" : "${QOOXDOO_PATH}/component/library/versionlabel/Manifest.json"
        }
      ]
    },

    "build-script" :
    {
      "compile-options" :
      {
        "code" :
        {
          "=optimize" : ["basecalls", "variables", "privates", "strings", "comments"]
        }
      }
    },
  
    "source-lowlevel" :
    {
      "let" :
      {
        "APPLICATION_MAIN_CLASS" : "${APPLICATION}.ApplicationLowLevel"
      },
    
      "run" : ["source-lowlevel-script"]      
    },
    
    "source-lowlevel-script" :
    {
      "extend" : ["source-script"],

      "compile-options" :
      {
        "paths" :
        {
          "file" : "${ROOT}/source/script/${APPLICATION}-lowlevel.js"
        }
      },
      
      "exclude" :
      [
        "${APPLICATION}.theme.*",
        "${APPLICATION}.test.*",
        "${APPLICATION}.simulation.*"
      ],
      
      "config-warnings" :
      {
        "exclude" : 
        [ "${APPLICATION}.theme.*",
          "${APPLICATION}.test.*",
          "${APPLICATION}.simulation.*" ] 
      }
    },
    
    "build-lowlevel" :
    {
      "let" :
      {
        "APPLICATION_MAIN_CLASS" : "${APPLICATION}.ApplicationLowLevel"
      },
      
      "run" :
      [
        "build-resources",
        "build-lowlevel-script",
        "build-files"
      ]
    },
    
    "build-lowlevel-script" :
    {
    
      "extend" : ["build-script"],

      "compile-options" :
      {
        "paths"  :
        {
          "file" : "${BUILD_PATH}/script/${APPLICATION}-lowlevel.js"
        },
        
        "code"   :
        {
          "=optimize" : ["basecalls", "variables", "privates", "strings", "comments"]
        }
      },
      
      "exclude" :
      [
        "${APPLICATION}.theme.*",
        "${APPLICATION}.test.*",
        "${APPLICATION}.simulation.*"
      ],
      
      "config-warnings" :
      {
        "exclude" : 
        [ "${APPLICATION}.theme.*",
          "${APPLICATION}.test.*",
          "${APPLICATION}.simulation.*" ] 
      }
    },
    
    "build-files" :
    {
      "copy-files" :
      {
        "files" :
        [
          "index.html",
          "index-gui.html",
          "index-lowlevel.html"
        ],

        "source" : "${ROOT}/source",
        "target" : "${BUILD_PATH}"
      }
    },
    
    "common" :
    {
      "environment" :
      {
        "qx.allowUrlSettings" : true,
        "fce.reportServerHost" : null,
        "fce.reportServerGetUrl" : "/reports/features/get",
        "fce.reportServerAddUrl" : "/reports/features/add"
      }
    }

    ,"translation" :
    {
      "translate" : { "poentry-with-occurrences" : false  }
    }
  }
}
