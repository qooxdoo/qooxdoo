{
  "name"    : "todo",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "todo",
    "QOOXDOO_PATH" : "../..",
    "API_EXCLUDE"  : ["qx.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  "config-warnings" : 
  {
    "job-shadowing" : ["source-all-script", "common", "translation"]
  },

  "jobs" :
  {
    "common" :
    {
      "=include" :
      [
        "${APPLICATION}.Application"
      ],
      
      "=environment" :
      {
        "qx.version"     : "1.6",
        "qx.application" : "${APPLICATION}.Application"
      }
    },

    "source-all-script" :
    {
      "=exclude" : 
      [
        "qx.test.*"
      ]
    }

    ,"translation" :
    {
      "translate" : { "poentry-with-occurrences" : false  }
    }
  }
}
