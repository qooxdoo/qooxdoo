{
  "name"    : "Apiviewer (application) config",

  "include" :
  [
    {
      "path" : "./api.json",
      "as"   : "apicnf"
    }, 

    {
      "path"   : "../../tool/data/config/application.json",
      
      // select everything except 'source' and 'build' which are defined locally
      "block" : 
      [ 
        "common",
        "source", 
        "source-script", 
        "build",
        "build-script",
        "build-files",
        "build-resources"
      ]
    }
  ],

  "let" : 
  {
    "APPLICATION"  : "apiviewer",
    "QOOXDOO_PATH" : "../../framework",
    "QOOXDOO_URI"  : "../${QOOXDOO_PATH}",
    "CACHE"        : "../../cache",
    "TEST_INCLUDE" : "${APPLICATION}.*"
  },

  "jobs" :
  {
    "source" :
    {
      "extend" : [ "apicnf::source" ],

      "let" :
      {
        "API_INCLUDE"  : ["${APPLICATION}.*"]
      }
    },

    "build" : 
    {
      "extend" : [ "apicnf::build" ],

      "let" :
      {
        "API_INCLUDE"  : ["${APPLICATION}.*"]
      }
    }
  }
}

