{
  "$schema": "https://qooxdoo.org/schema/compile-1-0-0.json",
  "targets": [
    {
      "type": "source",
      "application-types": [
        "node"
      ],
      "outputPath": "compiled/node/source",
      "babelOptions": {
        "targets": "node >= 11"
      }
    },
    {
      "type": "build",
      "application-types": [
        "node"
      ],
      "outputPath": "compiled/node/build",
      "deployPath": "lib",
      "minify": "off",
      "babelOptions": {
        "targets": "node >= 11"
      }
    }
  ],
  "defaultTarget": "source",
  "locales": [
    "en"
  ],
  "libraries": [
    "../.."
  ],
  "ignores": [
    "manifest_path",
    "setImmediate",
    "__dirname",
    "module.*",
    "process.*",
    "Promise.*",
    "require.*",
    "path.*",
    "args.*"
  ],
  "applications": [
    {
      "class": "qx.tool.compiler.cli.LibraryApplication",
      "name": "compilerLibrary",
      "title": "Qooxdoo Compiler as Library",
      "type": "node",
      "deploy": false,
      "include": [
        "qx.core.BaseInit",
        "qx.tool.*"
      ],
      "exclude": [
        "q",
        "qxWeb",
        "qx.module.*",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore"
      ]
    },
    {
      "class": "qxl.testnode.Application",
      "name": "testnode",
      "title": "Node Test",
      "type": "node",
      "deploy": false,
      "environment": {
        "qxl.testnode.testNameSpace": "qx.test"
      },
      "include": [
        "qx.core.BaseInit",
        "qx.test.tool.*",
        "qx.test.compiler.*",
        "qx.test.locale.*",
        "qx.test.lang.*",
        "qx.test.type.*",
        "qx.tool.*",
        "qx.dev.*",
        "qx.test.Class",
        "qx.test.Interface",
        "qx.test.Mixin",
        "qx.test.Promise",
        "qx.test.Bootstrap",
        "qx.test.Annotation",
        "qx.test.EditDistance",
        "qx.test.core.*",
        "qx.test.log.*",
        "qx.test.toolchain.*",
        "qx.test.data.*",
        "qx.test.event.Emitter",
        "qx.test.event.Timer",
        "qx.test.event.Messaging",
        "qx.test.io.jsonrpc.Protocol"
      ],
      "exclude": [
        "q",
        "qxWeb",
        "qx.module.*",
        "qx.ui.*",
        "qx.log.appender.Native",
        "qx.log.appender.Element",
        "qx.bom.Stylesheet",
        "qx.bom.Selector",
        "qx.bom.MediaQuery",
        "qx.bom.Vml",
        "qx.bom.client.Html",
        "qx.bom.client.Plugin",
        "qx.bom.client.Pdfjs",
        "qx.event.handler.Pointer",
        "qx.event.handler.Gesture",
        "qx.event.handler.PointerCore",
        "qx.test.data.controller.*",
        "qx.test.data.store.*",
        "qx.test.data.singlevalue.TextFieldDummy",
        "qx.test.core.Environment",
        "qx.test.data.singlevalue.Simple",
        "qx.test.data.singlevalue.Deep",
        "qx.test.data.singlevalue.Array"
      ]
    }
  ],
  "sass": {
    "compiler": "legacy"
  }
}
