{
  "name"    : "widgetbrowser",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "widgetbrowser",
    "QOOXDOO_PATH" : "../..",
    "QXTHEME"      : "qx.theme.Modern",
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },
  
  "jobs" :
  {
    "common" :
    {
      "settings" :
      {
        "qx.nativeScrollBars" : true
      }
    }
  }
}
